# The Agents Republic v6.0 — Environment Variables
# ==================================================
# Copy to .env and fill in your values:
#   cp .env.example .env

# ==========================================
# REQUIRED — Core
# ==========================================

# Claude API (Anthropic)
ANTHROPIC_API_KEY=sk-ant-api-...
CLAUDE_MODEL=claude-sonnet-4-20250514

# Telegram Bot
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
OPERATOR_TELEGRAM_CHAT_ID=123456789
TELEGRAM_ENABLED=true

# ==========================================
# REQUIRED — Social Platforms
# ==========================================

# GitHub
GITHUB_TOKEN=ghp_...
GITHUB_TOKEN_BOT=ghp_...
GITHUB_REPO=LumenBot/TheAgentsRepublic
GITHUB_BRANCH=main

# Twitter/X (v2 API — Free tier)
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=
TWITTER_BEARER_TOKEN=

# ==========================================
# OPTIONAL — Enhanced Features
# ==========================================

# Web Search (Brave)
BRAVE_SEARCH_API_KEY=

# ==========================================
# v6.0 — Web3 / Base L2 (Token Launch)
# ==========================================

# Base network RPC
BASE_RPC_URL=https://mainnet.base.org
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# Agent wallet (for token deployment)
AGENT_WALLET_ADDRESS=0x...
AGENT_WALLET_PRIVATE_KEY=0x...

# Clawnch (token launchpad)
CLAWNCH_CONTRACT_ADDRESS=0x...

# Post-deployment (fill after token launch)
REPUBLIC_TOKEN_ADDRESS=
GOVERNANCE_CONTRACT_ADDRESS=

# ==========================================
# System
# ==========================================
DB_PATH=data/agent.db
LOG_LEVEL=INFO
